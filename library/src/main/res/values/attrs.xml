<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="DonutProgressBar">
    <!-- Color of the filled circle. -->
    <attr format="color" name="fillColor"/>
    <!-- Width of the stroke used to draw circles. -->
    <attr format="dimension" name="strokeWidth"/>
    <!-- Color of the donut circles. -->
    <attr format="color" name="strokeColor"/>
    <!-- Color of the donut circle background. -->
    <attr format="color" name="strokeBgColor"/>
    <!-- If show progress text -->
    <attr format="boolean" name="showText"/>
    <!--Text of progressbar center text -->
    <attr name="android:text"/>
    <!--Text size of progressbar center text -->
    <attr name="android:textSize"/>
    <!--Text color of progressbar center text -->
    <attr name="android:textColor"/>
    <!--ProgressBar size-->
    <attr name="size">
      <enum name="small" value="1"/>
      <enum name="medium" value="2"/>
      <enum name="large" value="3"/>
    </attr>
  </declare-styleable>

</resources>